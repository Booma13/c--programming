}

7)Float Input
#include<iostream>
#include<iomanip>
using namespace std;
int main()
{
    float a;
    cin>>a;
    cout<<fixed<<setprecision(6)<<a;
    return 0;
}

8)Float Formatting
#include<iostream>
#include<iomanip>
using namespace std;
int main()
{
    float a;
    cin>>a;
    cout<<fixed<<setprecision(6)<<"\n"<<a;
    cout<<fixed<<setprecision(3)<<"\n"<<a;
    cout<<fixed<<setprecision(2)<<"\n"<<a;
    cout<<fixed<<setprecision(1)<<"\n"<<a;
    return 0;
}

9)Integer Input
#include<iostream>
using namespace std;
int main()
{
    int a;
    cin>>a;
    cout<<a;
    return 0;
}

10)Round off
#include<iostream>
#include<iomanip>
#include<math.h>
using namespace std;
int main()
{
    float a,c,d;
    cin>>a;
    int b=a;
    cout<<b;
    c=ceil(a);
    d=floor(a);
    cout<<fixed<<setprecision(1)<<"\n"<<c<<fixed<<setprecision(1)<<"\n"<<d;
    return 0;
}

11)Statistics
#include<iostream>
using namespace std;
int main()
{
    int a,b,c;
    cin>>a>>b>>c;
    cout<<"1)Dead:"<<a<<"\n2)Injured:"<<b<<"\n3)Safe:"<<c<<"\nPlease help the people who are suffering!!!";
    return 0;
}

