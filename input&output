23)Dhoni's Confident Reply!!!
#include<iostream>
using namespace std;
int main()
{
    string a,b;
    cout<<"Banerjee's Question:\n";
    getline(cin,a);
    cout<<"Dhoni's Reply:\n";
    getline(cin,b);
    cout<<"For Banerjee's question \""<<a<<"\" Dhoni's confident reply was \""<<b<<"\n";
    
    return 0;
}
