20)Interschool Trophy
#include<iostream>
#include<string>
using namespace std;
int main()
{
    string a,c;
    int b,o,s,ov;
    cout<<"Team 1:\nTeam Name:\n";
    getline(cin,a);
    cout<<"Score:\n";
    cin>>b;
    cout<<"Overs played:\n";
    cin>>o;
    cin.ignore();
    cout<<"Team 2:\n";
    cout<<"Team Name:\n";
    getline(cin,c);
    cout<<"Score:\n";
    cin>>s;
    cout<<"Overs played:\n";
    cin>>ov;
  
    cout<<"Match Details:\nTeam 1:\nName: "<<a;
    cout<<"\nScore: "<<b;
    cout<<"\nOvers played: "<<o;
    cout<<"\nTeam 2:\nName: "<<c;
    cout<<"\nScore: "<<s;
    cout<<"\nOvers played: "<<ov;
    return 0;
}

21)Favorite Game!!!
#include<iostream>
using namespace std;
int main()
{
    string a,g;
    cout<<"Name:\n";
    getline(cin,a);
    cout<<"Game:\n";
    cin>>g;
    cout<<"My name is "<<a<<" and I love to play "<<g<<"\n";
    
    return 0;
}

